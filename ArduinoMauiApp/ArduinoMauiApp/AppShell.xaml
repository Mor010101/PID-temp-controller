<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ArduinoMauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ArduinoMauiApp.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Temp"
            ContentTemplate="{DataTemplate views:TempControlPage}"
            Icon="icon_notes" />

        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate views:ChartView}"
            Icon="icon_about" />
    </TabBar>

</Shell>
